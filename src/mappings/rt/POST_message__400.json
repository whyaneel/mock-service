{
  "request": {
    "method": "POST",
    "urlPath": "/rt/post",
    "bodyPatterns": [
      {
        "equalToJson": {
          "myParam" : "400"
        }
      }
    ],
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      }
    }
  },
  "response": {
    "status": 400,
    "bodyFileName": "rt/POST_message_{{jsonPath request.body '$.myParam'}}_response.json",
    "headers": {
      "Content-Type": "application/json"
    }
  }
}